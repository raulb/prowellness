# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails', "~> 3.1.0"
  gem 'uglifier'
end

group :development do
  gem 'capistrano'
  gem 'annotate'
end

group :development, :test do
  gem 'ruby-debug19', :require => 'ruby-debug'
  gem 'rspec-rails'
  gem 'jasmine'
end

group :test do
  gem 'steak'
  gem 'capybara'
  gem 'database_cleaner'
  gem 'delorean'
  gem 'mocha'
  gem 'selenium'
  gem 'selenium-client'
