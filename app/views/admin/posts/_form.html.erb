<%= form_for [:admin, @post] do |f| %>
  <%= f.label :title, "Título" %><br />
  <%= f.text_field :title %><br />

  <%= f.label :excerpt, "Resumen" %>
  <%= f.text_area :excerpt, :rows => 10, :cols => 20 %>

  <%= f.label :body, "Cuerpo" %>
  <%= f.text_area :body, :rows => 10, :cols => 20 %>
  
  <%= f.label :categories, "Categoría" %>
  <%= f.select :categories, [["Fitness", "Fitness"]], { :include_blank => true, :prompt => "Selecciona una categoría" } %>
  
  <%= f.label :tags, "Tags" %>
  <%= f.text_area :tags, :rows => 10, :cols => 10 %>
  
  <%= f.submit "Guardar como borrador", :name => :draft %>
  <%= f.submit "Publicar", :name => :publish %>
<% end %>