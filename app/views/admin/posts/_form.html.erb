<%= form_for [:admin, @post], :html => {:class => 'post'} do |f| %>
  <%= f.label :title, "Título" %>
  <%= f.text_field :title %>

  <%= f.label :excerpt, "Resumen" %>
  <%= f.text_area :excerpt, :rows => 4, :cols => 80 %>

  <%= f.label :body, "Cuerpo" %>
  <%= f.text_area :body, :rows => 10, :cols => 80 %>
  
  <%= f.label :categories, "Categoría" %>
  <%= f.select :categories, [
               ["Artículos > Fitness", "Artículos, Fitness"],
               ["Artículos > Fitness > Ejercicio del mes", "Artículos, Fitness, Ejercicio del mes"],
               ["Artículos > Mujer", "Artículos, Mujer"],
               ["Artículos > Nutrición", "Artículos, Nutrición"],
               ["Artículos > Mi opinión", "Artículos, Mi opinión"],
               ["Guía Visual > Editorial", "Guía Visual, Editorial"],
               ["Guía Visual > Abdominales", "Guía Visual, Abdominales"],
               ["Guía Visual > Estiramientos", "Guía Visual, Estiramientos"],
               ["Guía Visual > Dietas", "Guía Visual, Dietas"],
               ["Guía Visual > Planes", "Guía Visual, Planes"],
               ["Blog", "Blog"]
               ], { :include_blank => false, :prompt => "Selecciona una categoría" } %>
  
  <%= f.label :tags, "Tags" %>
  <%= f.text_area :tags, :rows => 2, :cols => 40 %>
  
  <%= f.submit "Guardar como borrador", :name => :draft %>
  <%= f.submit "Publicar", :name => :publish %>
  <%= link_to 'Cancelar', admin_posts_path %>
<% end %>