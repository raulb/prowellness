<%= javascript_include_tag 'jquery.nivo.slider','articles' %>
<%= stylesheet_link_tag "articles","blog_posts","posts","nivo-slider" %>


<header>
  <span class="left-band"></span>
  <div class="right-band">
    <h2>Últimos artículos</h2>
    <div class="fixed-content">
      <span class="triangle"></span>
    </div>
  </div>
</header>


<% if @main_posts.any? %>
<div class="main_post">
  <div id="slider" class="nivoSlider">
    <% @main_posts.each do |post| %>
      <a href="<%= post_path(post) %>">
        <%= image_tag post.image.rollover.url, :title=> post.title, :alt=> post.excerpt+'...', :link=> post_path(post), :category=> post.categories.last.capitalize %>
      </a>
    <% end %>
  </div>
  <span class="shadow"></span>
</div>
<% end %>

<% if @posts.any? %>

    <ul class="posts articles">
      <% @posts.each do |post| %>
        <li class="post">
          <div>
            <%= link_to(image_tag(post.image.heading.url, :alt => post.title), post_path(post)) %>
            <h3><%= link_to(post.categories.last.capitalize, articles_category_path(post.categories.last), :title => post.categories.last) %></h2>
            <h2><%= link_to(post.title, post_path(post), :title => post.title) %></h2>
            <p class="author date">por <%= post.user.signature %> (<%= post.publish_date.strftime("%d/%m/%y") %>)</p>
            <p class="post"><%= post.excerpt %> ... <%= link_to("seguir leyendo", post_path(post), :title => post.title) %></p>
            <% if !post.tags.nil? %>
              <ul class="tags">
                <%  post.tags.each do |tag| %>
                  <li><a href="#"><%= tag %></a></li>
                <% end %>
              </ul>
            <% end %>
          </div>
          <span class="shadow"></span>
        </li>
      <% end %>
    </ul>
<% end %>


<%= link_to("ver más artículos", articles_path, :class=>'view-more') %>

<header>
  <span class="left-band"></span>
  <div class="right-band">
    <h2>Últimos vídeos</h2>
    <div class="fixed-content">
      <span class="triangle"></span>
    </div>
  </div>
</header>


<header>
  <span class="left-band"></span>
  <div class="right-band">
    <h2>Última entrada en el blog</h2>
    <div class="fixed-content">
      <span class="triangle"></span>
    </div>
  </div>

</header>
<ul class="posts blog multiple-posts">
    <li class="post">
      <div>
        <%= link_to(image_tag(@last_post.image.heading.url, :alt => @last_post.title), post_path(@last_post)) %>
        <h2><%= link_to(@last_post.title, post_path(@last_post), :title => @last_post.title) %></h2>
        <p class="date">(<%= @last_post.publish_date.strftime("%d/%m/%y") %>)</p>
        
        <p class="post"><%= @last_post.excerpt %> ... <%= link_to("seguir leyendo", post_path(@last_post), :title => @last_post.title) %></p>
        
        <% if !@last_post.tags.nil? %>
          <ul class="tags">
            <%  @last_post.tags.each do |tag| %>
              <li><a href="#"><%= tag %></a></li>
            <% end %>
          </ul>
        <% end %>
      </div>
      <span class="shadow"></span>
    </li>
    <%= link_to("leer más entradas del blog", blog_path, :class=>'view-more') %>
</ul>
