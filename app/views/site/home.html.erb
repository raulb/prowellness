<header>
  <span class="left-band"></span>
  <div class="right-band">
    <h2>Última entrada en el blog</h2>
    <div class="fixed-content">
      <span class="triangle"></span>
    </div>
  </div>

</header>
<ul class="posts blog multiple-posts">
    <li class="post">
      <div>
        <%= link_to(image_tag(@last_post.image.heading.url, :alt => @last_post.title), post_path(@last_post)) %>
        <h2><%= link_to(@last_post.title, post_path(@last_post), :title => @last_post.title) %></h2>
        <p class="date">(<%= @last_post.publish_date.strftime("%d/%m/%y") %>)</p>
        
        <p class="post"><%= @last_post.excerpt %> ... <%= link_to("seguir leyendo", post_path(@last_post), :title => @last_post.title) %></p>
        
        <% if !@last_post.tags.nil? %>
          <ul class="tags">
            <%  @last_post.tags.each do |tag| %>
              <li><a href="#"><%= tag %></a></li>
            <% end %>
          </ul>
        <% end %>
      </div>
      <span class="shadow"></span>
    </li>
</ul>


