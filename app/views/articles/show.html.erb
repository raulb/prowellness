<%= stylesheet_link_tag "posts" %>

<%= render "site/header_page", :title => @category %>


<div id="header_article">
  <h3>
    <%= @post.title %>
    <em>- por <%= @post.user.signature %></em>
  </h3>
  <div id="date" class="<%= (@category == "Ejercicio del mes")? 'month-exercise':'' %>">

    <p class="day"><%= @post.publish_date.strftime("%d") %></p>
    <p class="month"><%= @post.publish_date.strftime("%b") %></p>
    <p class="year"><%= @post.publish_date.strftime("%Y") %></p>
  </div>


  <% if @post.image? %>
    <div id="article_image">
      <%= image_tag @post.image.heading.url %>
      <span class="shadow"></span>
    </div>
  <% end %>
</div>

<article>
  <span class="white-box"></span>
  <p><%= @post.excerpt.try(:html_safe) %></p>
  <p><%= @post.body.try(:html_safe) %></p>

  <footer>
    <div class="left">
      <% if !@post.tags.nil? %>
        <h5>TAGS</h5>
        <ul class="tags">
          <%  @post.tags.each do |tag| %>
          <li><%= link_to(tag, tag_path(tag)) %></li>
          <% end %>
        </ul>
      <% end %>
    </div>

    <div class="right">
      <%= render(:partial => "posts/share") %>
    </div>
  </footer>

  <div id="comments">
    <%= render(:partial => "comments/index") %>
  </div>

</article>

<% if @other_posts.any? %>
  <div class="others" id="others">
    <div class="header">
      <h2>Otros art√≠culos de <%= @category %></h2>
    </div>
    <%= render "shared/others" %>
  </div>
<% end %>